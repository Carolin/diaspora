%li.message{:id => post.id, :class => ("mine" if current_user.owns?(post))}

  = person_image_link(post.person)

  .content
    .from
      = link_to post.person.real_name, post.person
      .aspect
        âž”
        %ul
          - if post.public?
            the world
          - else
            - for aspect in current_user.aspects_with_post( post.id )
              %li= link_to aspect.name, aspect

      - if current_user.owns?(post)
        .destroy_link
          = link_to t('.delete'), event_path(post), :confirm => t('.are_you_sure'), :method => :delete, :remote => true, :class => "delete"

    = post.title
    = post.summary if post.summary
    = post.start_time
    = post.end_time if post.end_time

    .info
      %span.time= link_to(how_long_ago(post), object_path(post))
      = link_to "#{t('.show_comments')} (#{post.comments.count})", '#', :class => "show_post_comments"

    = render "comments/comments", :post => post

