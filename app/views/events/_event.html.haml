.event{:id => post.id, :class => ("mine" if current_user.owns?(post))}
  %div.name
    = post.title #link_to post.title, object_path(post, :aspect => @aspect)
    = post.summary

    %div.time
      by
      = link_to ((current_user.person == post.person)? t('.you') : post.person.real_name), person_path(post.person)
      %br
      = how_long_ago(post) #link_to(how_long_ago(post), object_path(post, :aspect => @aspect))

