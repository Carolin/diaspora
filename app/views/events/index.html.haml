- content_for :left_pane do
  = render "shared/aspect_friends"

- content_for :publish do
  %h1
    Events
  .right
    = link_to t('.new_event'), '#new_event_pane', {:class => "button", :id => "add_event_button"}

.yo{:style => "display:none;" }
  #new_album_pane
    = render "events/new_event", :aspect => params[:aspect]

%div
  - for event in @events
    = render "event", :post => event

#pagination
  = will_paginate @events

