#left_pane
  %h2= @aspect
  .friend_pictures
    = owner_image_link
    - for friend in @friends
      = person_image_link(friend)
    - if @logged_in && (@aspect == :public)
      %h3 Facebook Friends
      - @fb_friends = MiniFB.get(@access_token, 'me', :type => "friends")
      - @fb_friends[:data].each do |friend|
        = image_tag( "http://graph.facebook.com/#{friend[:id]}/picture" )
    -unless (@aspect == :all)

      .add_friend_pane
        = link_to (image_tag('add_friend_button.png'), '#')
        .window{:style => "display:none;"}
          = render 'shared/contact_list', :contacts => @all_friends

      .fancybox_content
        #add_request_pane
          = render "requests/new_request", :aspect => @aspect
    -else
      .clear
        %br
        = link_to t('.add_friends'), aspects_manage_path

  %br
  %br
  %ul.left_nav
    %li= link_to 'stream', aspect_or_all_path(@aspect)
    %li= link_to t('.photos'), albums_path(:aspect => @aspect)

  %br

  = render "shared/invitations", :invites => @invites

